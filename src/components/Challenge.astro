---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="challenge-container">
  <div class="challenge-header">
    <h4>Challenge: {title}</h4>
  </div>
  <div class="challenge-content">
    <slot />
  </div>
</div>

<style>
  .challenge-container {
    margin: 2rem 0;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .challenge-header {
    background-color: var(--highlight);
    color: white;
    padding: 1rem;
  }
  
  .challenge-header h4 {
    margin: 0;
  }
  
  .challenge-content {
    padding: 1rem;
    background-color: #f9f9f9;
  }
</style>
