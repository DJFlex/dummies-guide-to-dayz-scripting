---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DayZ Standalone Scripting Tutorial for Beginners" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #2a3b4c;
		--secondary: #4a6b8a;
		--highlight: #f05a28;
		--text: #f5f5f5;
		--background: #f9f9f9;
		--code-bg: #2d2d2d;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: #333;
	}
	body {
		margin: 0;
		padding: 0;
	}
	.container {
		width: 90%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
		background-color: #f4f4f4;
		padding: 0.2em 0.4em;
		border-radius: 3px;
		font-size: 0.9em;
	}
	a {
		color: var(--highlight);
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
	}
</style>
