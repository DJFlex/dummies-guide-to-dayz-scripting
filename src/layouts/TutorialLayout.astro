---
import Layout from './Layout.astro';

interface Props {
  title: string;
  chapter: number;
}

const { title, chapter } = Astro.props;
---

<Layout title={`Chapter ${chapter}: ${title} - DZ Academy`}>
  <nav class="tutorial-nav">
    <div class="container">
      <a href="/" class="home-link">DZ Academy</a>
      <div class="nav-links">
        <a href="/chapter1" class={chapter === 1 ? 'active' : ''}>Ch 1</a>
        <a href="/chapter2" class={chapter === 2 ? 'active' : ''}>Ch 2</a>
        <a href="/chapter3" class={chapter === 3 ? 'active' : ''}>Ch 3</a>
        <a href="/chapter4" class={chapter === 4 ? 'active' : ''}>Ch 4</a>
        <a href="/chapter5" class={chapter === 5 ? 'active' : ''}>Ch 5</a>
        <a href="/chapter6" class={chapter === 6 ? 'active' : ''}>Ch 6</a>
        <a href="/chapter7" class={chapter === 7 ? 'active' : ''}>Ch 7</a>
        <a href="/chapter8" class={chapter === 8 ? 'active' : ''}>Ch 8</a>
      </div>
    </div>
  </nav>

  <main class="tutorial-content">
    <div class="container">
      <header class="chapter-header">
        <h1>Chapter {chapter}: {title}</h1>
      </header>
      
      <article class="chapter-content">
        <slot />
      </article>
      
      <div class="chapter-navigation">
        {chapter > 1 && (
          <a href={`/chapter${chapter - 1}`} class="prev-chapter">← Previous Chapter</a>
        )}
        
        {chapter < 8 && (
          <a href={`/chapter${chapter + 1}`} class="next-chapter">Next Chapter →</a>
        )}
      </div>
    </div>
  </main>

  <footer class="tutorial-footer">
    <div class="container">
      <p>&copy; 2023 DZ Academy - DayZ Modding Tutorial</p>
    </div>
  </footer>
</Layout>

<style>
  .tutorial-nav {
    background-color: var(--primary);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .tutorial-nav .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .home-link {
    color: var(--text);
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  .nav-links {
    display: flex;
    gap: 1rem;
  }
  
  .nav-links a {
    color: var(--text);
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.3s;
  }
  
  .nav-links a:hover, .nav-links a.active {
    background-color: var(--secondary);
    text-decoration: none;
  }
  
  .tutorial-content {
    padding: 2rem 0;
    min-height: calc(100vh - 200px);
  }
  
  .chapter-header {
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--highlight);
    padding-bottom: 1rem;
  }
  
  .chapter-header h1 {
    margin: 0;
    color: var(--primary);
  }
  
  .chapter-content {
    line-height: 1.6;
    font-size: 1.1rem;
  }
  
  .chapter-content h3 {
    margin-top: 2rem;
    color: var(--secondary);
  }
  
  .chapter-content p {
    margin-bottom: 1.5rem;
  }
  
  .chapter-content ul, .chapter-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .chapter-content li {
    margin-bottom: 0.5rem;
  }
  
  .chapter-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
  }
  
  .prev-chapter, .next-chapter {
    padding: 0.5rem 1rem;
    background-color: var(--secondary);
    color: white;
    border-radius: 4px;
    transition: background-color 0.3s;
  }
  
  .prev-chapter:hover, .next-chapter:hover {
    background-color: var(--primary);
    text-decoration: none;
  }
  
  .tutorial-footer {
    background-color: var(--primary);
    color: var(--text);
    padding: 1rem 0;
    text-align: center;
  }
  
  @media (max-width: 768px) {
    .nav-links {
      gap: 0.5rem;
    }
    
    .nav-links a {
      padding: 0.3rem;
      font-size: 0.9rem;
    }
  }
</style>
